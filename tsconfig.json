{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types",
      "./node_modules/@ioredis",
      "./src/types/request.d.ts"
    ]
  },

  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
